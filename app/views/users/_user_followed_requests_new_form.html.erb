<%= form_with(model: @follower_request, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :follower_id %>

    <%= f.text_field :follower_id, class: "form-control" %>
  </div>

  <%= f.hidden_field :followed_id, value: @user.id %>

  <%= f.submit "Create follower request", class: "btn btn-block btn-outline-secondary" %>
<% end %>
