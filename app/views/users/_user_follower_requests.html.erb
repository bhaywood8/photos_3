<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Follower Requests

    <a data-toggle="collapse" href="#user_follower_requests_new_form">
      Add follower request
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.follower_requests.each do |follower_request| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to follower_request, follower_request %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to follower_request, method: :delete, data: { confirm: "Do you really want to delete this follower_request" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_follower_requests_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_follower_requests_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
